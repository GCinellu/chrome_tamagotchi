{
  "manifest_version": 3,
  "name": "Chrome Tamagotchi",
  "version": "1.0",
  "description": "A virtual pet living in your browser!",
  "icons": {
    "16": "images/icon16x16.png",
    "48": "images/icon48x48.png",
    "128": "images/icon128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16x16.png",
      "48": "images/icon48x48.png",
      "128": "images/icon128x128.png"
    }
  },
  "permissions": [
    "storage"
  ]
}